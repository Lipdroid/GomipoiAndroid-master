<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:layout_width="294dp"
        android:layout_height="34dp"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/frame_status_level">

        <TextView
            android:id="@+id/level_textview"
            android:layout_width="33dp"
            android:layout_height="21dp"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="6dp"
            android:text="50"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"/>

        <TextView
            android:id="@+id/rest_textview"
            android:layout_width="100dp"
            android:layout_height="21dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="14dp"
            android:layout_alignParentRight="true"
            android:text="100"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center_vertical|right"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/main_room_button"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_margin="22dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_menu_ochanoma"
            android:src="@drawable/selector_game_menu_button" />

        <ImageButton
            android:id="@+id/poiko_room_button"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:layout_marginBottom="22dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_menu_poikoroom"
            android:src="@drawable/selector_game_menu_button" />

        <ImageButton
            android:id="@+id/garden_button"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:layout_marginBottom="22dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_menu_garden"
            android:src="@drawable/selector_game_menu_button" />

        <ImageButton
            android:id="@+id/to_top_button"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:layout_marginBottom="22dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_menu_top"
            android:src="@drawable/selector_game_menu_button" />

    </LinearLayout>

</RelativeLayout>