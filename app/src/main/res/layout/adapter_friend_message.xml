<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <Button
            android:id="@+id/imageViewInvite"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:text="インストール"
            android:textStyle="bold"
            android:textSize="@dimen/sp11"
            android:textColor="@color/white"
            android:background="@drawable/button_darkorange"/>

        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/imageViewInvite"
            android:layout_alignRight="@id/imageViewInvite"
            android:layout_below="@id/imageViewInvite"
            android:gravity="center"
            android:textSize="@dimen/sp12"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/imageViewInvite"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical"
            android:textColor="@color/dialog_text"
            android:textSize="@dimen/sp12" />

    </RelativeLayout>

</RelativeLayout>