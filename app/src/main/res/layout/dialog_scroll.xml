<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="@dimen/match_parent_width"
        android:layout_height="@dimen/match_parent_height"
        android:layout_gravity="center">
        <RelativeLayout
            android:layout_width="@dimen/match_parent_width"
            android:layout_height="@dimen/match_parent_height"
            android:layout_gravity="center">
            <!-- 背景 -->
            <ImageView
                android:id="@+id/imageViewBackgroundRight"
                android:layout_width="297dp"
                android:layout_height="402dp"
                android:layout_marginTop="90dp"
                android:src="@drawable/scroll_background_right"/>

            <!-- フッター -->
            <LinearLayout
                android:id="@+id/layoutPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:paddingBottom="87dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imageViewPage1"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginRight="@dimen/page_margin"
                    android:src="@drawable/selector_item_page"/>
                <ImageView
                    android:id="@+id/imageViewPage2"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginRight="@dimen/page_margin"
                    android:src="@drawable/selector_item_page"/>
                <ImageView
                    android:id="@+id/imageViewPage3"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginRight="@dimen/page_margin"
                    android:src="@drawable/selector_item_page"/>
                <ImageView
                    android:id="@+id/imageViewPage4"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginRight="@dimen/page_margin"
                    android:src="@drawable/selector_item_page"/>
                <ImageView
                    android:id="@+id/imageViewPage5"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginRight="@dimen/page_margin"
                    android:src="@drawable/selector_item_page"/>
                <ImageView
                    android:id="@+id/imageViewPage6"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginRight="@dimen/page_margin"
                    android:src="@drawable/selector_item_page"/>
                <ImageView
                    android:id="@+id/imageViewPage7"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/selector_item_page"/>
            </LinearLayout>
            <ImageButton
                android:id="@+id/buttonArrowLeft"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_toLeftOf="@id/layoutPage"
                android:layout_alignTop="@id/layoutPage"
                android:layout_marginRight="4dp"
                android:layout_marginTop="-8dp"
                android:padding="8dp"
                android:src="@drawable/item_arrow_left"
                android:background="@null"/>
            <ImageButton
                android:id="@+id/buttonArrowRight"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_toRightOf="@id/layoutPage"
                android:layout_alignTop="@id/layoutPage"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="-8dp"
                android:padding="8dp"
                android:src="@drawable/item_arrow_right"
                android:background="@null"/>
            <!-- Pager -->
            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="265dp"
                android:layout_height="358dp"
                android:layout_below="@id/imageViewTitle"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="104dp" />
        </RelativeLayout>
        <ImageView
            android:id="@+id/imageViewBackgroundLeft"
            android:layout_width="32dp"
            android:layout_height="430dp"
            android:layout_marginTop="67dp"
            android:src="@drawable/scroll_background_left"/>
    </FrameLayout>
</FrameLayout>