<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="@dimen/match_parent_width"
        android:layout_height="@dimen/match_parent_height"
        android:layout_gravity="center">
        <FrameLayout
            android:layout_width="@dimen/dialog_width"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="102.5dp"
            android:background="@drawable/dialog_background">
            <ImageView
                android:id="@+id/imageViewParts"
                android:layout_width="55dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"/>
            <ImageView
                android:id="@+id/imageViewName"
                android:layout_width="118dp"
                android:layout_height="18dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="100dp"/>
            <ImageView
                android:layout_width="154dp"
                android:layout_height="4dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="124dp"
                android:src="@drawable/item_dot"/>
            <ImageView
                android:id="@+id/imageViewTextRetainCount"
                android:layout_width="95dp"
                android:layout_height="15dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="142dp"
                android:src="@drawable/text_retain_count"/>
            <app.view.OutlineTextView
                android:id="@+id/outlineTextViewRetainCount"
                android:layout_width="52dp"
                android:layout_height="@dimen/white_number_samll_height"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="139dp"
                android:text="10"
                android:textSize="@dimen/white_number_small_text"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/textViewMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="190dp"
                android:text="つかいますか？"
                android:textSize="@dimen/sp20"
                android:textColor="@color/dialog_text"/>
        </FrameLayout>
        <LinearLayout
            android:id="@+id/layoutButtons"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <Button
                android:id="@+id/buttonRight"
                android:layout_width="95dp"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_no"/>
            <Button
                android:id="@+id/buttonLeft"
                android:layout_width="95dp"
                android:layout_height="45dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_yes"/>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>