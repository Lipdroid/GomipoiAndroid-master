<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/match_parent_width"
    android:layout_height="@dimen/match_parent_height" >

    <ImageView
        android:id="@+id/imageViewBackground"
        android:layout_width="320dp"
        android:layout_height="568dp"
        android:src="@drawable/top_background"/>

    <FrameLayout
        android:id="@+id/layoutAd"
        android:layout_width="@dimen/ad_width"
        android:layout_height="@dimen/ad_height"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>

    <LinearLayout
        android:id="@+id/layoutSns"
        android:layout_width="104dp"
        android:layout_height="48dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageViewSnsLine"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/top_sns_line"/>
        <ImageView
            android:id="@+id/imageViewSnsFacebook"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/top_sns_facebook"/>
        <ImageView
            android:id="@+id/imageViewSnsTwitter"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/top_sns_twitter"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="33dp"
        android:layout_height="41dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/layoutSns"
        android:layout_marginRight="10dp"
        android:orientation="vertical">
        <Button
            android:id="@+id/buttonInfo"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/top_button_info" />
        <ImageView
            android:id="@+id/imageViewInfoNew"
            android:layout_width="33dp"
            android:layout_height="15dp"
            android:layout_marginTop="-2dp"
            android:orientation="horizontal"
            android:src="@drawable/top_info_new"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/layoutPoint"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_alignRight="@id/imageViewBackground"
        android:layout_marginRight="10dp"
        android:layout_marginTop="6.5dp"
        android:paddingLeft="10dp"
        android:paddingRight="16dp"
        android:background="@drawable/point_frame">
        <include
            layout="@layout/layout_point" />
        <ImageView
            android:layout_width="24dp"
            android:layout_height="23dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_point"/>
    </FrameLayout>

    <ImageView
        android:id="@+id/imageViewTitle"
        android:layout_width="320dp"
        android:layout_height="170dp"
        android:layout_marginTop="79dp"
        android:src="@drawable/top_title" />

    <Button
        android:id="@+id/buttonRanking"
        android:layout_width="53dp"
        android:layout_height="55dp"
        android:layout_above="@id/layoutAd"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/top_button_ranking" />

    <Button
        android:id="@+id/buttonExchange"
        android:layout_width="53dp"
        android:layout_height="55dp"
        android:layout_toRightOf="@id/buttonRanking"
        android:layout_alignTop="@id/buttonRanking"
        android:layout_marginLeft="10dp"
        android:background="@drawable/top_button_exchange" />

    <Button
        android:id="@+id/buttonFriend"
        android:layout_width="53dp"
        android:layout_height="55dp"
        android:layout_toRightOf="@id/buttonExchange"
        android:layout_alignTop="@id/buttonRanking"
        android:layout_marginLeft="10dp"
        android:background="@drawable/top_button_friend" />
    <ImageView
        android:id="@+id/imageViewFriendNew"
        android:layout_width="41dp"
        android:layout_height="18dp"
        android:layout_alignLeft="@id/buttonFriend"
        android:layout_alignTop="@id/buttonFriend"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="-9dp"
        android:translationZ="2dp"
        android:src="@drawable/top_info_new"
        android:visibility="gone"/>

    <Button
        android:id="@+id/buttonSettings"
        android:layout_width="53dp"
        android:layout_height="55dp"
        android:layout_toRightOf="@id/buttonFriend"
        android:layout_alignTop="@id/buttonRanking"
        android:layout_marginLeft="10dp"
        android:background="@drawable/top_button_settings" />

    <Button
        android:id="@+id/buttonHelp"
        android:layout_width="53dp"
        android:layout_height="55dp"
        android:layout_toRightOf="@id/buttonSettings"
        android:layout_alignTop="@id/buttonRanking"
        android:layout_marginLeft="10dp"
        android:background="@drawable/top_button_help" />

    <Button
        android:id="@+id/buttonStart"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/buttonRanking"
        android:layout_marginBottom="10dp"
        android:background="@drawable/top_button_start" />

</RelativeLayout>