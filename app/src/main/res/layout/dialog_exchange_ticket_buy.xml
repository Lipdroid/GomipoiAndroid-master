<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="@dimen/match_parent_width"
        android:layout_height="@dimen/match_parent_height"
        android:layout_gravity="center">
        <RelativeLayout
            android:layout_width="@dimen/dialog_width"
            android:layout_height="250dp"
            android:layout_marginTop="102.5dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/dialog_background">

            <ImageView
                android:id="@+id/imageViewParts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="32dp"
                android:src="@drawable/parts_premium_ticket_small" />

            <ImageView
                android:id="@+id/imageViewName"
                android:layout_width="150dp"
                android:layout_height="18dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/imageViewParts"
                android:layout_marginTop="8dp"
                android:src="@drawable/premium_ticket_message"/>

            <ImageView
                android:id="@+id/imageViewDot"
                android:layout_width="154dp"
                android:layout_height="4dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/imageViewName"
                android:layout_marginTop="8dp"
                android:src="@drawable/item_dot"/>

            <ImageView
                android:id="@+id/imageViewGem"
                android:layout_width="55dp"
                android:layout_height="80dp"
                android:layout_alignLeft="@+id/imageViewDot"
                android:layout_alignStart="@+id/imageViewDot"
                android:layout_below="@+id/imageViewDot"
                android:layout_marginLeft="@dimen/dialog_ticket_gem_margin_left"
                android:layout_marginStart="@dimen/dialog_ticket_gem_margin_left"
                android:src="@drawable/shop_parts_gem" />

            <app.view.OutlineTextView
                android:id="@+id/outlineTextViewGem"
                android:layout_width="88dp"
                android:layout_height="@dimen/white_number_large_height"
                android:layout_below="@+id/imageViewDot"
                android:layout_toEndOf="@+id/imageViewGem"
                android:layout_toRightOf="@+id/imageViewGem"
                android:layout_marginTop="@dimen/dialog_ticket_text_margin_top"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:textColor="@color/white"
                android:textSize="@dimen/white_number_large_text" />

            <TextView
                android:id="@+id/textViewMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/outlineTextViewGem"
                android:layout_marginTop="10dp"
                android:text="入手しますか？"
                android:textSize="@dimen/sp20"
                android:textColor="@color/dialog_text"/>
        </RelativeLayout>
