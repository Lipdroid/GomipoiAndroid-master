<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="@dimen/match_parent_width"
        android:layout_height="@dimen/match_parent_height"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/imageViewLight"
            android:layout_width="225dp"
            android:layout_height="225dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="146.5dp"
            android:src="@drawable/poi_light_white"/>

        <ImageView
            android:id="@+id/imageViewIconGem"
            android:layout_width="50dp"
            android:layout_height="43dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="237.5dp"
            android:src="@drawable/poi_icon_gem"/>

        <ImageView
            android:id="@+id/imageViewGetText"
            android:layout_width="320dp"
            android:layout_height="70dp"
            android:layout_marginTop="110dp"
            android:src="@drawable/text_get"/>

        <ImageView
            android:id="@+id/imageViewGetGemText"
            android:layout_width="320dp"
            android:layout_height="20dp"
            android:layout_marginTop="400dp"
            android:src="@drawable/text_get_gem"/>

        <app.view.OutlineTextView
            android:id="@+id/outlineTextView"
            android:layout_width="20dp"
            android:layout_height="@dimen/white_number_samll_height"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="400dp"
            android:textSize="@dimen/white_number_item_dialog_text"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/buttonBack"
            android:layout_width="95dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="460dp"
            android:background="@drawable/button_back"/>

    </RelativeLayout>
</FrameLayout>