<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="@dimen/match_parent_width"
        android:layout_height="@dimen/match_parent_height"
        android:layout_gravity="center">

        <!-- タイトル -->
        <ImageView
            android:layout_width="119dp"
            android:layout_height="36dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:scaleType="fitCenter"
            android:src="@drawable/title_synthesis"/>

        <!-- 背景 -->
        <ImageView
            android:id="@+id/imageViewBackground"
            android:layout_width="320dp"
            android:layout_height="432dp"
            android:layout_marginTop="69dp"
            android:src="@drawable/picturebook_background"/>

        <!-- 説明文 -->
        <ImageView
            android:id="@+id/imageViewDescript"
            android:layout_width="265dp"
            android:layout_height="23dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="81dp"
            android:src="@drawable/panel_explanation"/>

        <!-- フッター -->
        <LinearLayout
            android:id="@+id/layoutPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:paddingBottom="87dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewPage1"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginRight="@dimen/book_page_margin"
                android:src="@drawable/selector_book_page_1"/>
            <ImageView
                android:id="@+id/imageViewPage2"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginRight="@dimen/book_page_margin"
                android:src="@drawable/selector_book_page_2"/>
            <ImageView
                android:id="@+id/imageViewPage3"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginRight="@dimen/book_page_margin"
                android:src="@drawable/selector_book_page_3"/>
            <ImageView
                android:id="@+id/imageViewPage4"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginRight="@dimen/book_page_margin"
                android:src="@drawable/selector_book_page_4"/>
            <ImageView
                android:id="@+id/imageViewPage5"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginRight="@dimen/book_page_margin"
                android:src="@drawable/selector_book_page_5"/>
            <ImageView
                android:id="@+id/imageViewPage6"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginRight="@dimen/book_page_margin"
                android:src="@drawable/selector_book_page_6"/>
            <ImageView
                android:id="@+id/imageViewPage7"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginRight="@dimen/book_page_margin"
                android:src="@drawable/selector_book_page_7"/>
            <ImageView
                android:id="@+id/imageViewPage8"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginRight="@dimen/book_page_margin"
                android:src="@drawable/selector_book_page_8"/>
            <ImageView
                android:id="@+id/imageViewPage9"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginRight="@dimen/book_page_margin"
                android:src="@drawable/selector_book_page_9"/>
            <ImageView
                android:id="@+id/imageViewPage10"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginRight="@dimen/book_page_margin"
                android:src="@drawable/selector_book_page_10"/>
            <ImageView
                android:id="@+id/imageViewPage11"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/selector_book_page_11"/>

        </LinearLayout>
        <ImageButton
            android:id="@+id/buttonArrowLeft"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_toLeftOf="@id/layoutPage"
            android:layout_alignTop="@id/layoutPage"
            android:layout_marginRight="4dp"
            android:layout_marginTop="-8dp"
            android:padding="8dp"
            android:src="@drawable/item_arrow_left"
            android:background="@null"/>
        <ImageButton
            android:id="@+id/buttonArrowRight"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_toRightOf="@id/layoutPage"
            android:layout_alignTop="@id/layoutPage"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="-8dp"
            android:padding="8dp"
            android:src="@drawable/item_arrow_right"
            android:background="@null"/>
        
        <!-- 合成 -->
        <ImageView
            android:id="@+id/imageViewFrame"
            android:layout_width="240dp"
            android:layout_height="135dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/imageViewDescript"
            android:src="@drawable/synthesis_frame"/>
        <ImageView
            android:id="@+id/imageViewButtonFrame"
            android:layout_width="208dp"
            android:layout_height="64dp"
            android:layout_centerHorizontal="true"
            android:layout_alignTop="@id/imageViewFrame"
            android:layout_marginTop="5dp"
            android:src="@drawable/synthesis_panel_frame"/>

        <ImageButton
            android:id="@+id/imageButtonSynthesis1"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignLeft="@id/imageViewButtonFrame"
            android:layout_alignTop="@id/imageViewButtonFrame"
            android:scaleType="fitCenter"
            android:background="@drawable/panel_on"
            android:visibility="gone"
            android:src="@drawable/panel_paper" />

        <ImageButton
            android:id="@+id/imageButtonSynthesis2"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerHorizontal="true"
            android:layout_alignTop="@id/imageViewButtonFrame"
            android:scaleType="fitCenter"
            android:background="@drawable/panel_on"
            android:visibility="gone"
            android:src="@drawable/panel_paper" />

        <ImageButton
            android:id="@+id/imageButtonSynthesis3"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignRight="@id/imageViewButtonFrame"
            android:layout_alignTop="@id/imageViewButtonFrame"
            android:scaleType="fitCenter"
            android:background="@drawable/panel_on"
            android:visibility="gone"
            android:src="@drawable/panel_paper" />

        <Button
            android:id="@+id/buttonScroll"
            android:layout_width="63dp"
            android:layout_height="45dp"
            android:layout_below="@id/imageViewButtonFrame"
            android:layout_alignLeft="@id/imageViewButtonFrame"
            android:layout_marginTop="5dp"
            android:enabled="false"
            android:background="@drawable/selector_button_scroll"/>

        <ImageButton
            android:id="@+id/buttonSynthesis"
            android:layout_width="95dp"
            android:layout_height="45dp"
            android:layout_below="@id/imageViewButtonFrame"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="5dp"
            android:scaleType="fitCenter"
            android:background="@null"
            android:src="@drawable/button_synthesis_act" />

        <!-- Pager -->
        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="261dp"
            android:layout_height="190dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/imageViewFrame"
            android:layout_marginTop="10dp" />
    </RelativeLayout>
</FrameLayout>