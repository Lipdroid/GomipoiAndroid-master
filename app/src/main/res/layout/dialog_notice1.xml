<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="@dimen/match_parent_width"
        android:layout_height="@dimen/match_parent_height"
        android:layout_gravity="center">
        <FrameLayout
            android:layout_width="310dp"
            android:layout_height="526dp"
            android:layout_centerInParent="true">
            <ImageView
                android:layout_width="310dp"
                android:layout_height="475dp"
                android:src="@drawable/notice1"/>
            <Button
                android:id="@+id/checkButton"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="8dp"
                android:layout_gravity="bottom"
                android:background="@drawable/selector_notice_check"/>
            <TextView
                android:layout_width="116dp"
                android:layout_height="21dp"
                android:layout_marginLeft="44dp"
                android:layout_marginBottom="8dp"
                android:layout_gravity="bottom"
                android:gravity="center_vertical"
                android:text="次回から表示しない"
                android:textSize="@dimen/sp11"
                android:textColor="@color/white"/>
            <Button
                android:id="@+id/closeButton"
                android:layout_width="85dp"
                android:layout_height="37dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="right|bottom"
                android:background="@drawable/notice_close_button"/>
        </FrameLayout>
    </RelativeLayout>
</FrameLayout>